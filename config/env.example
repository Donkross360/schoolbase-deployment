# =============================================================================
# SchoolBase Deployment Configuration
# =============================================================================
# Copy this file to .env in the deployment root directory and update values
# DO NOT commit the .env file to version control
# =============================================================================

# =============================================================================
# Environment
# =============================================================================
NODE_ENV=production

# =============================================================================
# Database Configuration
# =============================================================================
DB_USER=postgres
DB_PASS=change-me-strong-password
DB_NAME=schoolbase
DB_PORT=5432
DB_SSL=false

# =============================================================================
# JWT Configuration (IMPORTANT: Change these in production!)
# =============================================================================
JWT_SECRET=change-me-to-strong-random-secret
JWT_REFRESH_SECRET=change-me-to-strong-random-secret-different-from-jwt-secret
TOKEN_ACCESS_DURATION=1h
TOKEN_REFRESH_DURATION=7d

# =============================================================================
# Domain Configuration (for SSL and Nginx)
# =============================================================================
FRONTEND_DOMAIN=yourdomain.com
BACKEND_DOMAIN=api.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# =============================================================================
# Application URLs
# =============================================================================
FRONTEND_URL=http://localhost:3000
SUPERADMIN_LOGIN_URL=http://localhost:3000/superadmin/login
NEXT_PUBLIC_API_URL=http://localhost:3008/api/v1
NEXT_PUBLIC_API_BASE_URL=http://localhost:3008/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Service Ports
# =============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=3008
DB_PORT=5432
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# =============================================================================
# MinIO Configuration
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-strong-password
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change-me-strong-password
MINIO_BUCKET_NAME=schoolbase

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@schoolbase.com
MAIL_FROM_NAME=SchoolBase

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=SchoolBase
APP_SLUG=schoolbase
LOGO_URL=
SCHOOL_NAME=
SCHOOL_LOGO_URL=

# =============================================================================
# Payment Gateway (Optional - Paystack)
# =============================================================================
PAYSTACK_URL=https://api.paystack.co
PAYSTACK_KEY=

# =============================================================================
# OAuth (Optional - Google)
# =============================================================================
GOOGLE_CLIENT_ID=

# =============================================================================
# Other Configuration
# =============================================================================
LOG_LEVEL=info
INVITE_EXPIRATION_DAYS=7
